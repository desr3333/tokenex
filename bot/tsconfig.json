{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",

    "target": "es6",

    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,

    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    // "declaration": true,
    // "declarationDir": "./types",

    "paths": {
      "@types": ["types/"],
      "@core": ["@core/"],
      "@lib": ["lib/"],
      "@helpers": ["helpers/"],
      "@services": ["services/"]
    }
  },
  "include": ["src", "src/locales"],
  "exclude": ["node_modules"]
}
