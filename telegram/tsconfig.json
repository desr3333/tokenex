{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",

    "target": "es6",

    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,

    "experimentalDecorators": true,
    "skipLibCheck": true,

    // "declaration": true,
    // "declarationDir": "./types",

    "paths": {
      "@types": ["types/"],
      "@core": ["@core/"]
      // "@controllers": ["controllers/"],
      // "@handlers": ["handlers/"],
      // "@utils": ["utils/"],
      // "@middlewares": ["middlewares/"],
      // "@services": ["services/"]
    }
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules"]
}
